#include<stdio.h>
int main()
{
    float a,b,c;
    int choice;
    printf("Enter the two floating numbers : ");
    scanf("%f %f",&a,&b);
    printf("\nEnter your choice : \n");
    printf("\n1. Addition \n2.Subtraction \n3.Product \n4.Division\n");
    scanf("%d",&choice);
    
    switch(choice)
    {
        case 1: 
        c=a+b;
        printf("Addition of %f + %f = %f",a,b,c);
        break;
        
        case 2: 
        c=a-b;
        printf("Subtraction of %f - %f = %f",a,b,c);
        break;
        
        case 3:
        c=a*b;
        printf("Product of %f * %f =  %f",a,b,c);
        break;
        
        case 4:
        c=a / b;
        printf("Division of %f / %f =  %f",a,b,c);
        break;
        
        default:
        printf("Invalid entry");
        break;
    }
}
